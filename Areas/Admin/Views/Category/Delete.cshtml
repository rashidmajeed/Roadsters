@model  Roadsters.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-light"> Delete Category </h2>
<br />

<form method="post" asp-action="Delete">
    <div class="border backgroundColor">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label text-light"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" readonly class="form-control" style="background-color:white"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteOgBackButton" model="Model.Id" />
            </div>
        </div>
    </div>
</form>