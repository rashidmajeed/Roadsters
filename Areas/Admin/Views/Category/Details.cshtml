@model Roadsters.Models.Category
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-light">Category Details</h2>
<br />

<form method="post" asp-action="Detail">
    <div class="border backgroundColor">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name"  disabled class="form-control" style="background-color:white"/>
            </div>
       </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DetailAndBackButton" model="Model.Id" />
            </div>
        </div>
    </div>
</form>
